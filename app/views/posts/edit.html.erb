<div class="container">
    <% @post.errors.full_messages.each do |message| %>
        <div class="alert alert-success" role="alert">
            <%= message %>
        </div>
    <% end %>

    <div class="form-group">
        <%= form_tag("/posts/#{@post.id}/update") do %>
        <textarea name="edited_content" class="form-control" id="exampleFormControlTextarea1" rows="3"><%= @post.content %></textarea>
        <input type="submit" label="送信">
        <% end %>
    </div>
</div>