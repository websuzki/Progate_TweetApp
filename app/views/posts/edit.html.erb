    <div>
        <% @post.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    </div>
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <textarea name="edited_content">
        <%= @post.content %>
    </textarea>
    <input type="submit" label="送信">
    <% end %>
</div>